<p id="notice"><%= notice %></p>

<h1>Classrooms</h1>

<% if @classrooms.any? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Code</th>
        <th>Teacher</th>
        <th>Student count</th>
        <th>Active</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @classrooms.each do |classroom| %>
        <tr>
          <td><%= classroom.name %></td>
          <td><%= classroom.code %></td>
          <td><%= classroom.teacher %></td>
          <td><%= classroom.student_count %></td>
          <td><%= classroom.active %></td>
          <td><%= classroom.category %></td>
          <td><%= link_to 'Show', classroom %></td>
          <td><%= link_to 'Edit', edit_classroom_path(classroom) %></td>
          <td><%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h3>No Classrooms, Please Create One!</h3>
<% end %>

<br>

<%= link_to 'New Classroom', new_classroom_path %>